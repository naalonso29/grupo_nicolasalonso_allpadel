<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head.ejs") %>
        <link href="/css/login.css" rel="stylesheet">
</head>

<body>
    <%- include("../partials/header.ejs") %>
        <main>

            <form action="/users/login" method="post">
                <section class="login">

                    <h1>LOGIN</h1>

                    <h3>Email</h3>
                    <input type="email" name="email" id="email" class="campos">

                    <ul class="mensaje-error">
                        <% if (locals.erroremail && erroremail.email) { %>
                            <li><small>
                            *
                            <%= erroremail.email.msg %>
                        </small></li>
                            <% } %>
                    </ul>

                    <h3>Contraseña</h3>
                    <input type="password" name="password" id="password" class="campos">

                    <ul class="mensaje-error" id="mensaje-error-pass">
                        <% if (locals.errorclave && errorclave.clave) { %>
                            <li><small>
                                    *
                                    <%= errorclave.clave.msg %>
                                </small></li>
                            <% } %>
                    </ul>

                    <article class="checkbox">
                        <input type="checkbox" name="recuerdame" id="">
                        <p>Recuerdame</p>
                    </article>

                    <ul class="lista-errores">
                        <% if (locals.errors) { errors.forEach( error => { %>
                            <li><small>
                                                *
                                                <%= error.msg %>
                                            </small></li>
                            <% }) }%>
                    </ul>


                    <button type="submit" class="boton">Iniciar Sesión</a></button>
                    <button type="submit" class="botonReg"><a href="/users/register" class="a-boton">Registrarme</a></button>
                </section>
            </form>

        </main>
        <%- include("../partials/footer.ejs") %>
            <script src="/js/validacionesLogin.js"></script>
</body>

</html>