<!DOCTYPE html>
<html lang="es">

<head>
    <%- include("../partials/head.ejs") %>
        <link href="/css/register.css" rel="stylesheet">
</head>

<body>
    <%- include("../partials/header.ejs") %>
        <main>

            <h1>Registro</h1>

            <form enctype="multipart/form-data" action="/users/register" method="post">
                <section class="registro">
                    <section class="izq-campos">
                        <h3>Nombre</h3>
                        <input type="text" name="nombre" id="nombre" class="campos">

                        <h3>Apellido</h3>
                        <input type="text" name="apellido" id="apellido" class="campos">

                        <h3>Email</h3>
                        <input type="email" name="email" id="email" class="campos">

                        <% if (locals.erroremail && erroremail.email) { %>
                            <p class="mensaje-error"><small>
                                *
                                <%= erroremail.email.msg %>
                            </small></p>
                            <% } %>

                                <h3>Contrase√±a</h3>
                                <input type="password" name="password" id="password" class="campos">
                    </section>

                    <section class="der-img">
                        <img src="/img/profiles/default.jpg" alt="">
                        <div class="file-select" id="src-file1">
                            <input type="file" name="imagen" aria-label="Archivo">
                        </div>

                        <% if (locals.errorimagen && errorimagen.imagen) { %>
                            <p class="mensaje-error"><small>
                                *
                                <%= errorimagen.imagen.msg %>
                            </small></p>
                            <% } %>
                    </section>

                    <section class="btnregistro">
                        <button type="submit" class="boton">Registrarme</button>
                        <ul class="lista-errores">
                            <% if (locals.errors) { errors.forEach( error => { %>
                                <li><small>
                                    *
                                    <%= error.msg %>
                                </small></li>
                                <% }) }%>
                        </ul>
                    </section>


                </section>

            </form>
        </main>
        <%- include("../partials/footer.ejs") %>
            <script src="/js/validacionesRegister.js"></script>
</body>

</html>